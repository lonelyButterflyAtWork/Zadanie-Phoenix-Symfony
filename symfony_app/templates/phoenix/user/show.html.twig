{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">User details</h1>
    <div class="card">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">First name:</dt>
                <dd class="col-sm-9">{{ user.first_name ?? '-' }}</dd>
                <dt class="col-sm-3">Last name:</dt>
                <dd class="col-sm-9">{{ user.last_name ?? '-' }}</dd>
                <dt class="col-sm-3">Gender:</dt>
                <dd class="col-sm-9">{{ user.gender ?? '-' }}</dd>
                <dt class="col-sm-3">Birthdate:</dt>
                <dd class="col-sm-9">{{ user.birthdate ?? '-' }}</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a href="{{ path('phoenix_user_edit', {id: user.id}) }}" class="btn btn-primary me-2">Edit</a>
            <a href="{{ path('phoenix_user_list') }}" class="btn btn-secondary">Back to list</a>
        </div>
    </div>
</div>
{% endblock %}
