{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">{{ user is defined ? 'Edit user' : 'Add user' }}</h1>
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row mb-3">
                    <div class="col-md-6 mb-3">
                        <div class="mb-2">{{ form_label(form.first_name) }}</div>
                        {{ form_widget(form.first_name) }}
                        {{ form_errors(form.first_name) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="mb-2">{{ form_label(form.last_name) }}</div>
                        {{ form_widget(form.last_name) }}
                        {{ form_errors(form.last_name) }}
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6 mb-3">
                        <div class="mb-2">{{ form_label(form.birthdate) }}</div>
                        {{ form_widget(form.birthdate) }}
                        {{ form_errors(form.birthdate) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="mb-2">{{ form_label(form.gender) }}</div>
                        {{ form_widget(form.gender) }}
                        {{ form_errors(form.gender) }}
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            {{ form_end(form) }}
        </div>
        <div class="card-footer text-end">
            <a href="{{ path('phoenix_user_list') }}" class="btn btn-secondary">Back to list</a>
        </div>
    </div>
</div>
{% endblock %}
